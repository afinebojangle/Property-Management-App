<h2>Create a New Lease</h2>

<%= simple_form_for(@lease, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.association :user, label_method: :email, value_method: :id %>
  <%= f.association :unit %>
  <%= f.input :start_date %>
  <%= f.input :end_date %>
  <%= f.button :submit, "Create Lease", class: 'btn-primary' %>
<% end %>